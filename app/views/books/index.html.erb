<h1>Listing Books</h1>

 
<div class="media mb-3">
  	<div class="media-left mr-3">
  		<%= link_to 'New book', new_book_path, :class => "btn btn-outline-primary" %>
  	</div>
  	<div class="media-left mr-3">
  		<%= link_to 'Borrow Listing', borrow_list_path(), :class => "btn btn-outline-primary" %>
  	</div>
  	<div class="media-body">
		<%= form_tag books_path, :method => "get" do |b| %>
			<%= select_tag "category", options_for_select(@categories, @selected), :include_blank => "Sort By Category", :onchange => "this.form.submit();", :class=>"custom-select float-right" %>
		<% end %>
  	</div>
</div>






<table class="table table-responsive">
  <tr>
    <th class="sortable"><%= sortable "title" %></th>
    <th>Category</th>
    <th>Author Name</th>
    <th class="min-width-200">Released Date</th>
    <th colspan="3"></th>
  </tr>
 
  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.category %></td>
      <td><%= book.author_name %></td>
      <td><%= book.released_date.strftime('%v') %></td>
      <td><%= link_to 'Show', book_path(book), :class => "btn btn-outline-info" %></td>
      <td><%= link_to 'Edit', edit_book_path(book), :class => "btn btn-outline-primary" %></td>
      <td><%= link_to 'Destroy', book_path(book), :class => "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>