<h1>Listing Borrows</h1>

<table class="table">
  <tr>
    <th>Resident Name</th>
    <th>Borrow Date</th>
    <th>Return Date</th>
    <th>Information</th>
  </tr>
 
  <% @borrows.each do |bo| %>
    <tr>
      <td><%= bo.resident %></td>
      <td><%= bo.borrowed_date.strftime('%v') %></td>
      <td><%= bo.return_date.strftime('%v') %></td>
      <td><%= bo.information %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', books_path,  :class=>"btn btn-outline-primary" %>